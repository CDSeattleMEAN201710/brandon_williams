<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dojo Message Board</title>
  </head>
  <body>
    <div class="container">
      <h2>The Dojo Message Board</h2>
      <hr>
      <div class="form_post_message">
        <form action="/process_post" method="post">
          Name: <br><input type="text" name="user" value=""><br>
          Message: <br><textarea name="message" rows="3" cols="30"></textarea>
          <input type="submit" name="submit" value="Post Message">
          <hr>
        </form>
      </div><!--End of form post message ------->
      <div class="display">
        <h2>All Posts</h2>
        <% for(post of posts){ %>
          <h3>Name: <%= post.user %></h3>
          <h3>Message: <%= post.message %></h3>
          <% for(comment of post.comments ){ %>
               <p>Name: <%= comment.user %></p>
               <p>Comment:- <%= comment.text %></p><br>
          <% } %>
          <form action="/process_comment/<%= post._id%>" method="post">
            Name: <br><input type="text" name="user" value=""><br>
            Comment: <br><input type="text" name="text" value="">
            <input type="submit" name="submit" value="Post Comment">
            <hr>
          </form>
        <% } %>
      </div>
    </div>
  </body>
</html>
