<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mongooses</title>
  </head>
  <body>
    <div class="nav">
      <a href="/">Home</a>
      <a href="/mongooses/new">New Mongoose</a>
    </div>
    <div class="container">
      <form action="/mongooses/<%= animal._id%>" method="post">
        <label>Name: <input type="text" name="name" value="<%=animal.name %>"></label><br>
        <label>Type: <select name="type"><br>
          <option value="male">Male</option>
          <option value="female">Female</option></select></label><br>
        <label>Color: <input type="text" name="color" value="<%=animal.color %>"></label><br>
        <label>Age: <input type="text" name="age" value="<%=animal.age %>"></label><br>
        <input type="submit" name="submit" value="Edit">
      </form>
    </div>
  </body>
</html>
